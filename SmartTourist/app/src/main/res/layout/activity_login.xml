<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTintMode="screen"
    tools:context=".Login">

    <EditText

        android:id="@+id/login_email_Input"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:autofillHints="emailAddress"

        android:background="@drawable/register_editext_style"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="#3B5D71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioRoleGroup" />

    <Button
        android:id="@+id/login_page_loin_button"
        android:layout_width="152dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/register_editext_style"
        android:minHeight="48dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <TextView
        android:id="@+id/text_view_Login"
        android:layout_width="251dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bangers_regular"
        android:text="@string/login_page"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/regLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:text="@string/not_registered_yet_click_here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page_loin_button"
        tools:text="Not Registered Yet!, Click Here" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:autofillHints="password"
        android:background="@drawable/register_editext_style"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="#3B5D71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_Input" />

    <RadioGroup
        android:id="@+id/radioRoleGroup"
        android:layout_width="301dp"
        android:layout_height="151dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textAlignment="viewStart"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/agentRadio"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Agent" />

        <RadioButton
            android:id="@+id/touristRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:minHeight="48dp"
            android:text="Tourist" />

        <RadioButton
            android:id="@+id/adminRadio"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Admin" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bangers_regular"
        android:text="Choose the role:"
        android:textColor="#830000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Login" />

</androidx.constraintlayout.widget.ConstraintLayout>